<UserControl x:Class="WpfApp6.Pages.GoodInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp6.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="209*"/>
            <RowDefinition Height="189*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="SPTitle" Orientation="Horizontal" Grid.Row="0">
            <Image Name="GoodImage"/>
            <DockPanel Name="ChildPanel" Grid.Column="0" Width="500">
                <Label Name="LGoodName" Content="GoodName" FontSize="60" HorizontalContentAlignment="Left" VerticalContentAlignment="Top"/>
                <Label Name="LGoodPrice" Content="GoodPrice" Grid.Row="0" FontSize="30" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom"/>
            </DockPanel>
            <StackPanel/>
        </StackPanel>
    </Grid>
</UserControl>
